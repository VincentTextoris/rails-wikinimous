<h1 class='text-center'>Articles#index</h1>

<p class='text-center'><%= link_to "New Article", new_article_path %></p>

<% @articles.each do |article| %>
  <h2 class='text-center'><%= link_to article.title, article_path(article) %></h2>
  <h4 class='text-center'><%= article.content %></h4>
<% end %>
